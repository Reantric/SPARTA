{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports" : true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true
  },
  "include": [
    "sketch",
    "global.d.ts" // Ensure global.d.ts is included
  ],
  "exclude": [
    "node_modules"
  ]
}
